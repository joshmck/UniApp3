<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserProfile">

    <ImageView
        app:srcCompat="@mipmap/logo"
        android:id="@+id/ProfilePicture"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:text="UsersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserName"
        android:layout_below="@+id/ProfilePicture"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:textStyle="normal|bold" />

    <Button
        android:text="Edit"
        android:id="@+id/editProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_height="40dp"
        android:layout_width="55dp" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/userBioHeader"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:layout_below="@+id/UserName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

    <TextView
        android:text="email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userBio"
        android:fontFamily="monospace"
        android:textSize="12sp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/userBioHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/bioTextView"
        android:fontFamily="monospace"
        android:layout_below="@+id/userBio"
        android:layout_toLeftOf="@+id/editProfile"
        android:layout_toStartOf="@+id/editProfile"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp"
        android:gravity="center"/>
</RelativeLayout>
